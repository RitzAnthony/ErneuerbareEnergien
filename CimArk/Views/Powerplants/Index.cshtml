@model IEnumerable<DAL.Powerplant>

@{
    ViewBag.Title = "Index";
}

<h2>Graphs</h2>

<div style="float:right; border-radius: 10px; border: 3px solid black; padding:5px;">
    <a data-toggle="tab" href="#Photovoltaic">
        <img src="~/images/pv.png" width="80px" alt="Photovoltaic" />
    </a>
    <a data-toggle="tab" href="#Hydraulic">
        <img src="~/images/hydr.png" width="80px" alt="Hydraulic" />
    </a>
    <br />
    <a data-toggle="tab" href="#Windturbine">
        <img src="~/images/wind.png" width="80px" alt="Windturbine" />
    </a>
    <a data-toggle="tab" href="#Biogas">
        <img src="~/images/bio.png" width="80px" alt="Biogas" />
    </a>
</div>


<div class="tab-content">
    <div id="Biogas" class="tab-pane fade">

        <h3>Biogas</h3>
        
        <!--<a data-toggle="tab" href="#Hydraulic">Hydraulic</a>-->
            
        
    </div>
    <div id="Hydraulic" class="tab-pane fade">
        <h3>Hydraulic</h3>
    </div>
    <div id="Windturbine" class="tab-pane fade">
        <h3>Windturbine</h3>
    </div>

    <div id="Photovoltaic" class="tab-pane fade">
        <h3>Photovoltaic</h3>
    </div>
</div>




<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.No_RPC)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Power)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PowerAvgYear)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Launch)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PostalCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Streetname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Streetnumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GPS_X)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GPS_Y)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PowerType.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.No_RPC)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Power)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PowerAvgYear)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Launch)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PostalCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Streetname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Streetnumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GPS_X)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GPS_Y)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.City)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PowerType.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
